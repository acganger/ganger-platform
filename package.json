{
  "name": "ganger-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Ganger Platform - Staff Management, Lunch System, and L10 Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "supabase status",
    "supabase:reset": "supabase db reset",
    "deploy:staging": "turbo run build && gcloud app deploy app-staging.yaml",
    "deploy:production": "turbo run build && gcloud app deploy app-production.yaml"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "turbo": "^1.10.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@10.2.4"
}