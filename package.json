{
  "name": "ganger-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Ganger Platform - A comprehensive platfor for Ganger Dermatology",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:staff": "turbo run build --filter=@ganger/staff",
    "dev": "turbo run dev",
    "dev:staff": "turbo run dev --filter=@ganger/staff",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "supabase status",
    "supabase:reset": "supabase db reset",
    "deploy:staging": "turbo run build && gcloud app deploy app-staging.yaml",
    "deploy:production": "turbo run build && gcloud app deploy app-production.yaml",
    "build:production": "turbo build",
    "test:all": "turbo test",
    "deploy:check": "turbo build && turbo test",
    "validate": "npm run build:production && echo 'Ready for deployment'",
    "validate:env": "node scripts/validate-environment.js",
    "validate:env:production": "NODE_ENV=production node scripts/validate-environment.js",
    "docs:update": "node scripts/docs/update-docs.js",
    "docs:check": "bash scripts/docs/updatedocs.sh",
    "docs:sprint": "node scripts/docs/sprint.js",
    "dev:showcase": "cd apps/component-showcase && npm run dev"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.15",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "babel-loader": "^10.0.0",
    "eslint": "^8.55.0",
    "eslint-config-next": "^15.3.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "turbo": "^1.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@10.2.4",
  "packageManager-disabled": "pnpm@8.15.0",
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.9.0",
    "@supabase/supabase-js": "^2.49.10",
    "@tailwindcss/postcss": "^4.1.8",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "googleapis": "^150.0.1",
    "html2canvas": "^1.4.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.516.0",
    "mysql2": "^3.14.1",
    "next": "^14.2.29",
    "nodemailer": "^7.0.3",
    "postcss": "^8.5.4",
    "prisma": "^6.9.0",
    "puppeteer": "^24.10.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "stripe": "^18.2.1",
    "tailwindcss": "^4.1.8",
    "twilio": "^5.7.0",
    "zod": "^3.25.51"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "18.3.0",
      "@types/react-dom": "18.3.0",
      "react": "18.3.1",
      "react-dom": "18.3.1"
    }
  }
}
