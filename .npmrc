# pnpm configuration for Vercel deployment + WSL2 optimization
# Do not hoist by default, but allow specific problem packages if needed
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
node-linker=hoisted
frozen-lockfile=false
auto-install-peers=true
strict-peer-dependencies=false
shamefully-hoist=true

# WSL2 and large monorepo optimizations
link-workspace-packages=true
hoist-pattern=*
enable-modules-dir=true
workspace-concurrency=4
virtual-store-dir=.pnpm-store
virtual-store-dir-max-length=120
package-import-method=hardlink
modules-cache-max-age=1440
fetch-timeout=600000
max-sockets=50
store-dir=~/.pnpm-store
side-effects-cache=true