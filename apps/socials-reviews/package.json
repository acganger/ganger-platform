{
  "name": "@ganger/socials-reviews",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3010",
    "build": "next build && npx @cloudflare/next-on-pages",
    "build:next": "next build",
    "build:worker": "npx @cloudflare/next-on-pages",
    "start": "next start -p 3010",
    "deploy": "npm run build && wrangler pages deploy .vercel/output/static --project-name=socials-reviews-production",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:components": "jest --testPathPattern=components",
    "test:hooks": "jest --testPathPattern=hooks",
    "test:utils": "jest --testPathPattern=utils",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "jest --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "@cloudflare/next-on-pages": "^1.13.12",
    "@ganger/auth": "workspace:*",
    "@ganger/ui": "workspace:*",
    "@ganger/utils": "workspace:*",
    "@supabase/supabase-js": "^2.39.7",
    "clsx": "^2.0.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.516.0",
    "next": "14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241022.0",
    "@tailwindcss/postcss": "^4.1.7",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-mocks-http": "^1.13.0",
    "postcss": "^8.4.39",
    "tailwindcss": "^4.1.7",
    "ts-jest": "^29.1.1"
  },
  "description": "Socials & Reviews Management Dashboard - Frontend Application",
  "keywords": [
    "socials",
    "reviews",
    "google-business",
    "social-media",
    "frontend",
    "ganger-platform"
  ]
}