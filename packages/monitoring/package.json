{
  "name": "@ganger/monitoring",
  "version": "1.0.0",
  "description": "Centralized monitoring and health check system for Ganger Platform",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./sentry": {
      "types": "./dist/sentry.d.ts",
      "default": "./dist/sentry.js"
    },
    "./performance-tracking": {
      "types": "./dist/performance-tracking.d.ts",
      "default": "./dist/performance-tracking.js"
    }
  },
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "dev": "tsc --watch -p tsconfig.build.json",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "check-types": "tsc --noEmit -p tsconfig.build.json",
    "prepare": "pnpm run build"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@ganger/db": "workspace:*",
    "@ganger/cache": "workspace:*",
    "@ganger/auth": "workspace:*",
    "typescript": "^5.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "ganger-platform",
    "monitoring",
    "health-checks",
    "observability",
    "medical-platform"
  ]
}