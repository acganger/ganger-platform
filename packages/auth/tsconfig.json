{
  "extends": "../config/typescript/react.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@ganger/*": ["../*/src"]
    }
  },
  "include": ["src/**/*", "src/types/**/*"],
  "exclude": ["dist", "node_modules", "src/**/__tests__/**/*", "src/**/*.test.ts", "src/**/*.test.tsx"]
}